<!-- MAIN LAYOUT -->

<!-- Defines the document as an HTML5 file -->
<!DOCTYPE html>

<!-- Sets page language to English -->
<html lang="en">
    <head>

        <!--PAGE SETTINGS-->

        <!-- Tells browser how to read the file-->
         <meta charset="UTF-8">

         <!-- Makes website look proper on all devices (phones, tablets, desktop, etc.) -->
         <meta name="viewport" content="width=device-width, initial-scale=1.0">

         <!-- Title changes depending on the page rendered -->
         <!-- Uses EJS to insert the title variable if it exists -->
            <title><%= typeof title !== 'undefined' ? title : 'My Portfolio' %></title>

        <!--STYLESHEETS-->
        
        <!-- Bootstrap CSS for design and layout)-->
        <!-- Links to the Bootstrap stylehseet-->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet">

        <!-- Font Awesome for icons (Github and LinkedIn) -->
        <!-- Links to the Font Awesome CSS for icons -->
         <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
            rel="stylesheet">

        <!-- My own custom CSS file -->
        <!-- Links to my custom stylesheet -->
            <link rel="stylesheet" href="/stylesheets/style.css">
    </head>

    <body>

        <!-- NAVIGATION BAR (HEADER) -->
        <!-- Makes a dark navbar -->
         <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <!-- Makes navbar span have full width with padding -->
            <div class="container-fluid">

                <!-- Brand name and logo on the left -->
                <!-- Clicking this takes the user back to the home page -->
                 <a class="navbar-brand" href="/">My Portfolio</a>

                 <!-- Hamburger icon for the mobile menu -->
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                      
                      <!-- This is shown when screen is small -->
                      <span class="navbar-toggler-icon"> </span>  
                  </button>

                <!-- Navigation Bar Links -->
                 <!-- Collpasing mobile menu -->
                 <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- 'ms-auto' pushes the items onto the right side-->
                     <!-- Makes an unordered list of nav links -->
                     <ul class="navbar-nav ms-auto">

                        <!-- Each link sends you to their respective pages -->
                         <li class="nav-item"><a class="nav-link" href="/home">Home</a></li>
                         <li class="nav-item"><a class="nav-link" href="/about">About Me</a></li>
                         <li class="nav-item"><a class ="nav-link" href="/projects">Projects</a></li>
                         <li class="nav-item"><a class="nav-link" href="/contact">Contact Me</a></li>
                     </ul>
                 </div>
            </div>
         </nav>

         <!-- MAIN PAGE CONTENT AREA -->
         <!-- The main body section where all the page's content wil be shown -->
         <main class="container mt-4">